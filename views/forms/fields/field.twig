{% if not inputOnly %}
<div class="form-group">
    {% if label is defined and label|length > 0 %}
        <label for="{{ name }}">{{ label }}</label>
    {% endif %}
{% endif %}

    {% block input %}
        <input id="{{ name }}" name="{{ name }}" type="{{ type }}" class="form-control {{ class }}"{% for prop, val in properties %} {{ prop }}="{{ val }}"{% endfor %}/>
    {% endblock %}

    {% if error is defined and error|length > 0 %}
        <span class="ui-error-message">{{ error }}</span>
    {% endif %}

{% if not inputOnly %}
    </div>
{% endif %}